		"@storybook/react": "^5.2.8",
		"babel-eslint": "^10.0.1",
		"babel-loader": "^8.0.6",
		"eslint": "^5.16.0",
		"eslint-plugin-react-hooks": "^2.2.0",
		"husky": "^2.3.0",
		"lint-staged": "^8.2.1",
		"prettier": "^1.17.1"
	},
	"eslintConfig": {
		"parser": "babel-eslint",
		"parserOptions": {
			"ecmaVersion": "2019"
		},
		"extends": [
			"@quarterto"
		],
		"plugins": [
			"react-hooks"
		],
		"rules": {
			"react-hooks/rules-of-hooks": "error",
			"react-hooks/exhaustive-deps": "warn",
			"camelcase": [
				"error",
				{
					"allow": [
						"api_token",
						"per_page",
						"order_by"
					]
				}
			],
			"meteor/no-session": "off"
		},
		"settings": {
			"import/resolver": "meteor"
		}
	},
	"prettier": "@quarterto/prettier",
	"lint-staged": {
		"*.{js,json}": [
			"prettier --write",
			"git add"
		]
	},
	"husky": {
		"hooks": {
			"pre-commit": "lint-staged",
			"pre-push": "npm test"
		}
	}
}
