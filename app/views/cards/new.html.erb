<% content_for :header do %>
   <h1>Add something...</h1>
<% end %>

<% content_for :nav do %>
   <%= link_to @campaign do %>
      <h3><%= @campaign.name %></h3>
   <% end %>
<% end %>

<div class="grid">
   <% @types.each do |type| %>
      <%= link_to new_polymorphic_path([@campaign, type.new]), class: :card do %>
         <header>
            <h3>
               <% if type.icon %>
                  <i class="<%= type.icon %>" aria-role="image" aria-label="<%= type.model_name.human %>"></i>
               <% end %>
               <%= type.model_name.human %>
            </h3>
         </header>
         <p><%= type.description %></p>
      <% end %>
   <% end %>
</div>
