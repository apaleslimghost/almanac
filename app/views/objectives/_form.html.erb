<%= render 'cards/form', card: card do |form| %>
   <%= form.fields_for :actable, card.actable do |a| %>
      <div class="field">
         <%= a.label :completed %>
         <%= a.check_box :completed %>
      </div>
      <div class="field">
         <%= a.label :quest %>
         <%= a.collection_select :quest_id, CardType::Quest.all, :id, :title %>
      </div>
      <div class="field">
         <%= a.label :location %>
         <%= a.collection_select :location_id, CardType::Location.all, :id, :title, include_blank: true %>
      </div>
   <% end %>
<% end %>
