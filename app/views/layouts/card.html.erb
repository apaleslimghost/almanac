<% content_for :title, @card.title %>

<% content_for :nav do %>
   <%= link_to @campaign do %>
      <h3><%= @campaign.name %></h3>
   <% end %>

   <%= content_for :card_nav %>
<% end %>

<% unless content_for?(:header) %>
   <% content_for :header do %>
      <h1><%= @card.title %></h1>
   <% end %>
<% end %>

<%= render template: 'layouts/header_and_content' %>
